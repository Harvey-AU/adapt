{
  "name": "webflow-designer-extension-cli",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "build": "npm install && npm run compile && npx webflow extension bundle",
    "dev": "npm install && concurrently -r \"npx webflow extension serve\" \"npm run compile -- --watch --preserveWatchOutput\"",
    "lint": "eslint --no-config-lookup -c eslint.config.mjs \"src/**/*.ts\"",
    "format:check": "prettier --check \"./**/*.{ts,json,md,html,css,yml,yaml}\"",
    "format:write": "prettier --write \"./**/*.{ts,json,md,html,css,yml,yaml}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@webflow/designer-extension-typings": "^2.0.2",
    "@webflow/webflow-cli": "^1.12.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.6.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@webflow/data-types": "^1.2.1",
    "webflow-designer-extension-cli": "file:"
  }
}
